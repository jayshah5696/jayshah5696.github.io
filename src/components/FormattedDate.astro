---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()} class="font-mono text-xs tabular-nums text-sand-500 dark:text-sand-500 tracking-wide">
  {date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  })}
</time>
