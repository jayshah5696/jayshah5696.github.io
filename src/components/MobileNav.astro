---
import { SITE_TITLE, NAV_ITEMS } from '../consts';

const currentPath = Astro.url.pathname;
---

<header class="lg:hidden fixed top-0 inset-x-0 z-40 bg-paper/95 dark:bg-paper-dark/95 backdrop-blur-sm border-b border-ink-100 dark:border-ink-800/50">
  <div class="flex items-center justify-between px-5 h-14">
    <a href="/" class="flex items-center gap-2.5">
      <img
        src="/assets/images/Profile.jpg"
        alt={SITE_TITLE}
        class="size-7 rounded-full object-cover"
      />
      <span class="font-display text-base font-medium text-ink-900 dark:text-ink-100">{SITE_TITLE}</span>
    </a>

    <div class="flex items-center gap-1">
      <nav class="flex items-center" aria-label="Mobile navigation">
        {NAV_ITEMS.map((item) => {
          const isActive = currentPath === item.href ||
            (item.href !== '/' && currentPath.startsWith(item.href));
          return (
            <a
              href={item.href}
              class:list={[
                'px-2.5 py-1 text-sm transition-colors',
                isActive
                  ? 'text-ink-900 dark:text-ink-100 font-medium'
                  : 'text-ink-400 dark:text-ink-500',
              ]}
            >
              {item.label}
            </a>
          );
        })}
      </nav>

      <button
        id="theme-toggle-mobile"
        type="button"
        class="ml-1 p-1.5 text-ink-300 dark:text-ink-600"
        aria-label="Toggle dark mode"
      >
        <svg class="size-4 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
        </svg>
        <svg class="size-4 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
        </svg>
      </button>
    </div>
  </div>
</header>
