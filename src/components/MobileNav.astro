---
import { SITE_TITLE, NAV_ITEMS } from '../consts';

const currentPath = Astro.url.pathname;
---

<header class="lg:hidden fixed top-0 left-0 right-0 z-40 border-b border-cream-300 dark:border-night-700"
  style="background: rgba(253, 249, 241, 0.92); backdrop-filter: blur(12px);">
  <!-- Top accent line -->
  <div class="h-0.5" style="background: linear-gradient(to right, #c4623a, #d4a843, #c4623a);" aria-hidden="true"></div>

  <div class="flex items-center justify-between px-4 h-14" style="backdrop-filter: none;">
    <a href="/" class="flex items-center gap-2.5">
      <img
        src="/assets/images/Profile.jpg"
        alt={SITE_TITLE}
        width="28"
        height="28"
        class="rounded-full size-7 grayscale object-cover ring-1 ring-terra/20"
      />
      <span class="font-display text-sm text-ink dark:text-silk">{SITE_TITLE}</span>
    </a>

    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-3">
        {NAV_ITEMS.map(({ label, href }) => {
          const isActive = href === '/' ? currentPath === '/' : currentPath.startsWith(href);
          return (
            <a
              href={href}
              class:list={[
                'text-[10px] font-mono uppercase transition-colors duration-200',
                isActive
                  ? 'text-terra dark:text-terra-light font-medium'
                  : 'text-ink-muted dark:text-silk-muted hover:text-ink dark:hover:text-silk',
              ]}
              style="letter-spacing: 0.12em;"
            >
              {label}
            </a>
          );
        })}
      </nav>

      <button
        id="theme-toggle-mobile"
        type="button"
        class="text-ink-muted dark:text-silk-muted hover:text-terra dark:hover:text-terra-light transition-colors cursor-pointer"
        aria-label="Toggle dark mode"
      >
        <svg class="size-4 hidden dark:block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="4"/><path d="M12 2v2m0 16v2M4.93 4.93l1.41 1.41m11.32 11.32 1.41 1.41M2 12h2m16 0h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"/></svg>
        <svg class="size-4 block dark:hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/></svg>
      </button>
    </div>
  </div>
</header>

<!-- Dark mode override for mobile nav background -->
<style>
  .dark header { background: rgba(21, 17, 30, 0.92) !important; }
</style>
