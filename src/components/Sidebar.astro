---
import { SITE_TITLE, SITE_TAGLINE, SOCIAL_LINKS, NAV_ITEMS } from '../consts';

const currentPath = Astro.url.pathname;
---

<aside class="hidden lg:flex flex-col fixed left-0 top-0 bottom-0 w-[272px] border-r border-sand-200 dark:border-carved-800 bg-sand-50 dark:bg-carved-950 z-30 overflow-y-auto">
  <!-- Kolam dot pattern overlay (very subtle) -->
  <div class="absolute inset-0 kolam-bg opacity-30 dark:opacity-20 pointer-events-none" aria-hidden="true"></div>
  
  <div class="relative flex flex-col h-full px-6 py-8">
    <!-- Profile — carved medallion -->
    <a href="/" class="group flex flex-col items-center text-center mb-6">
      <div class="relative mb-3">
        <div class="absolute -inset-1.5 rounded-full border border-sand-300 dark:border-carved-600 opacity-60"></div>
        <div class="absolute -inset-3 rounded-full border border-sand-200 dark:border-carved-700 opacity-30"></div>
        <img
          src="/assets/images/Profile.jpg"
          alt={SITE_TITLE}
          width="72"
          height="72"
          class="relative rounded-full size-[72px] object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
        />
      </div>
      <h1 class="font-display text-xl text-carved-900 dark:text-sand-50">{SITE_TITLE}</h1>
    </a>
    
    <p class="text-[10px] font-mono text-sand-500 dark:text-sand-500 leading-relaxed tracking-[0.15em] uppercase text-center mb-8">
      {SITE_TAGLINE}
    </p>

    <!-- Rangoli divider -->
    <div class="rangoli-border mb-2"></div>

    <!-- Navigation — stepped tiers like a gopuram -->
    <nav class="flex flex-col gap-0.5 mb-8">
      {NAV_ITEMS.map(({ label, href }, i) => {
        const isActive = href === '/' ? currentPath === '/' : currentPath.startsWith(href);
        return (
          <a
            href={href}
            class:list={[
              'relative px-4 py-2.5 text-sm font-body tracking-wide transition-all duration-200 rounded-sm',
              isActive
                ? 'bg-terra/10 dark:bg-terra/15 text-terra dark:text-terra-light font-medium border-l-2 border-terra dark:border-terra-light'
                : 'text-carved-600 dark:text-sand-400 hover:text-carved-900 dark:hover:text-sand-100 hover:bg-sand-100 dark:hover:bg-carved-800/50 border-l-2 border-transparent',
            ]}
            style={`padding-left: ${16 + i * 4}px;`}
          >
            {label}
          </a>
        );
      })}
    </nav>

    <!-- Spacer -->
    <div class="flex-1" />

    <!-- Social links — arranged like carved icons in a frieze -->
    <div class="flex items-center justify-center gap-3 mb-4">
      <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="text-sand-400 dark:text-carved-500 hover:text-terra dark:hover:text-terra-light transition-colors duration-200" aria-label="GitHub">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.twitter} target="_blank" rel="noopener noreferrer" class="text-sand-400 dark:text-carved-500 hover:text-terra dark:hover:text-terra-light transition-colors duration-200" aria-label="X / Twitter">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="text-sand-400 dark:text-carved-500 hover:text-terra dark:hover:text-terra-light transition-colors duration-200" aria-label="LinkedIn">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.huggingface} target="_blank" rel="noopener noreferrer" class="text-sand-400 dark:text-carved-500 hover:text-terra dark:hover:text-terra-light transition-colors duration-200" aria-label="Hugging Face">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zm-.5 4.5c.828 0 1.5.448 1.5 1s-.672 1-1.5 1S10 8.052 10 7.5s.672-1 1.5-1zm4 0c.828 0 1.5.448 1.5 1s-.672 1-1.5 1-1.5-.448-1.5-1 .672-1 1.5-1zM8.5 14c0-1.933 1.567-3.5 3.5-3.5s3.5 1.567 3.5 3.5H14c0-1.105-.895-2-2-2s-2 .895-2 2H8.5z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.email} class="text-sand-400 dark:text-carved-500 hover:text-terra dark:hover:text-terra-light transition-colors duration-200" aria-label="Email">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
      </a>
    </div>

    <!-- Dark mode toggle — sun/moon carved icon -->
    <button
      id="theme-toggle-desktop"
      class="flex items-center justify-center gap-2 text-xs font-mono uppercase tracking-widest text-sand-500 dark:text-sand-500 hover:text-terra dark:hover:text-terra-light transition-colors cursor-pointer py-2"
      aria-label="Toggle dark mode"
    >
      <svg class="size-4 hidden dark:block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>
      <svg class="size-4 block dark:hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/></svg>
      <span class="dark:hidden">Dark</span>
      <span class="hidden dark:inline">Light</span>
    </button>
  </div>
</aside>

<script is:inline>
  document.querySelectorAll('[id^="theme-toggle"]').forEach(btn => {
    btn.addEventListener('click', () => {
      const html = document.documentElement;
      html.classList.toggle('dark');
      localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
    });
  });
</script>
