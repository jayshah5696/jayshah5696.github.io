---
import { SITE_TITLE, SITE_TAGLINE, SOCIAL_LINKS, NAV_ITEMS } from '../consts';

const currentPath = Astro.url.pathname;
---

<aside class="hidden lg:flex flex-col fixed left-0 top-0 bottom-0 w-[272px] z-30 overflow-y-auto
  bg-cream-50 dark:bg-night-900 border-r border-cream-300 dark:border-night-700">

  <!-- Kolam dot pattern -->
  <div class="absolute inset-0 kolam-dots pointer-events-none" aria-hidden="true"></div>

  <!-- Top accent bar: terracotta → gold -->
  <div class="h-1 shrink-0" style="background: linear-gradient(to right, #c4623a, #d4a843);" aria-hidden="true"></div>

  <div class="relative flex flex-col h-full px-6 py-8">
    <!-- Profile -->
    <a href="/" class="group flex flex-col items-center text-center mb-5">
      <div class="relative mb-4">
        <div class="absolute -inset-2 rounded-full border-2 border-dashed border-gold/30 dark:border-gold-dark/30"></div>
        <img
          src="/assets/images/Profile.jpg"
          alt={SITE_TITLE}
          width="72"
          height="72"
          class="relative rounded-full size-[72px] object-cover grayscale group-hover:grayscale-0 transition-all duration-500 ring-2 ring-terra/20 dark:ring-terra-light/20"
        />
      </div>
      <h1 class="font-display text-xl text-ink dark:text-silk">{SITE_TITLE}</h1>
    </a>

    <p class="text-[10px] font-mono text-ink-muted dark:text-silk-muted leading-relaxed uppercase text-center mb-6" style="letter-spacing: 0.12em;">
      {SITE_TAGLINE}
    </p>

    <!-- Kolam divider -->
    <div class="kolam-border mb-4">
      <span class="kolam-motif">◆</span>
    </div>

    <!-- Navigation -->
    <nav class="flex flex-col gap-0.5 mb-8">
      {NAV_ITEMS.map(({ label, href }) => {
        const isActive = href === '/' ? currentPath === '/' : currentPath.startsWith(href);
        return (
          <a
            href={href}
            class:list={[
              'px-4 py-2.5 text-sm font-body transition-all duration-200 rounded',
              isActive
                ? 'bg-terra/10 dark:bg-terra-light/10 text-terra dark:text-terra-light font-medium border-l-[3px] border-terra dark:border-terra-light'
                : 'text-ink-light dark:text-silk-muted hover:text-ink dark:hover:text-silk hover:bg-cream-200/50 dark:hover:bg-night-800/50 border-l-[3px] border-transparent',
            ]}
          >
            {label}
          </a>
        );
      })}
    </nav>

    <div class="flex-1" />

    <!-- Social -->
    <div class="flex items-center justify-center gap-4 mb-5">
      <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="text-ink-faint dark:text-silk-faint hover:text-terra dark:hover:text-terra-light transition-colors" aria-label="GitHub">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.twitter} target="_blank" rel="noopener noreferrer" class="text-ink-faint dark:text-silk-faint hover:text-terra dark:hover:text-terra-light transition-colors" aria-label="X / Twitter">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="text-ink-faint dark:text-silk-faint hover:text-terra dark:hover:text-terra-light transition-colors" aria-label="LinkedIn">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.huggingface} target="_blank" rel="noopener noreferrer" class="text-ink-faint dark:text-silk-faint hover:text-terra dark:hover:text-terra-light transition-colors" aria-label="Hugging Face">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zm-.5 4.5c.828 0 1.5.448 1.5 1s-.672 1-1.5 1S10 8.052 10 7.5s.672-1 1.5-1zm4 0c.828 0 1.5.448 1.5 1s-.672 1-1.5 1-1.5-.448-1.5-1 .672-1 1.5-1zM8.5 14c0-1.933 1.567-3.5 3.5-3.5s3.5 1.567 3.5 3.5H14c0-1.105-.895-2-2-2s-2 .895-2 2H8.5z"/></svg>
      </a>
      <a href={SOCIAL_LINKS.email} class="text-ink-faint dark:text-silk-faint hover:text-terra dark:hover:text-terra-light transition-colors" aria-label="Email">
        <svg class="size-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
      </a>
    </div>

    <!-- Theme toggle -->
    <button
      id="theme-toggle-desktop"
      type="button"
      class="flex items-center justify-center gap-2 text-xs font-mono uppercase text-ink-muted dark:text-silk-muted hover:text-terra dark:hover:text-terra-light transition-colors cursor-pointer py-2"
      style="letter-spacing: 0.1em;"
      aria-label="Toggle dark mode"
    >
      <svg class="size-4 hidden dark:block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="4"/><path d="M12 2v2m0 16v2M4.93 4.93l1.41 1.41m11.32 11.32 1.41 1.41M2 12h2m16 0h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"/></svg>
      <svg class="size-4 block dark:hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/></svg>
      <span class="dark:hidden">Dark</span>
      <span class="hidden dark:inline">Light</span>
    </button>
  </div>
</aside>

<script is:inline>
  document.querySelectorAll('[id^="theme-toggle"]').forEach(function(btn) {
    btn.addEventListener('click', function() {
      document.documentElement.classList.toggle('dark');
      localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
    });
  });
</script>
