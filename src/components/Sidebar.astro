---
import { SITE_TITLE, SITE_TAGLINE, SOCIAL_LINKS, NAV_ITEMS } from '../consts';

const currentPath = Astro.url.pathname;
---

<aside class="hidden lg:flex flex-col fixed inset-y-0 left-0 w-64 border-r border-ink-100 dark:border-ink-800/50 z-30">
  <div class="flex flex-col h-full px-7 py-10">
    <!-- Identity -->
    <a href="/" class="group block">
      <img
        src="/assets/images/Profile.jpg"
        alt={SITE_TITLE}
        class="size-16 rounded-full object-cover grayscale-[20%] group-hover:grayscale-0 transition-all duration-300"
      />
      <h1 class="mt-5 font-display text-xl font-medium text-ink-900 dark:text-ink-100">
        {SITE_TITLE}
      </h1>
      <p class="mt-1 text-[0.8rem] leading-relaxed text-ink-400 dark:text-ink-500">
        {SITE_TAGLINE}
      </p>
    </a>

    <!-- Nav -->
    <nav class="mt-10 flex-1" aria-label="Main navigation">
      <ul class="space-y-0.5">
        {NAV_ITEMS.map((item) => {
          const isActive = currentPath === item.href ||
            (item.href !== '/' && currentPath.startsWith(item.href));
          return (
            <li>
              <a
                href={item.href}
                class:list={[
                  'block py-1.5 text-sm transition-colors',
                  isActive
                    ? 'text-ink-900 dark:text-ink-100 font-medium'
                    : 'text-ink-400 hover:text-ink-700 dark:text-ink-500 dark:hover:text-ink-300',
                ]}
                aria-current={isActive ? 'page' : undefined}
              >
                {item.label}
              </a>
            </li>
          );
        })}
      </ul>
    </nav>

    <!-- Bottom -->
    <div class="space-y-5">
      <!-- Social -->
      <div class="flex items-center gap-3.5">
        <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="text-ink-300 hover:text-ink-600 dark:text-ink-600 dark:hover:text-ink-400 transition-colors" aria-label="GitHub">
          <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <a href={SOCIAL_LINKS.twitter} target="_blank" rel="noopener noreferrer" class="text-ink-300 hover:text-ink-600 dark:text-ink-600 dark:hover:text-ink-400 transition-colors" aria-label="Twitter">
          <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="text-ink-300 hover:text-ink-600 dark:text-ink-600 dark:hover:text-ink-400 transition-colors" aria-label="LinkedIn">
          <svg class="size-[18px]" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a href={SOCIAL_LINKS.email} class="text-ink-300 hover:text-ink-600 dark:text-ink-600 dark:hover:text-ink-400 transition-colors" aria-label="Email">
          <svg class="size-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
        </a>
      </div>

      <!-- Theme toggle -->
      <button
        id="theme-toggle-desktop"
        type="button"
        class="flex items-center gap-2 text-xs text-ink-300 hover:text-ink-600 dark:text-ink-600 dark:hover:text-ink-400 transition-colors"
        aria-label="Toggle dark mode"
      >
        <svg class="size-3.5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
        </svg>
        <svg class="size-3.5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
        </svg>
        <span class="dark:hidden">Dark</span>
        <span class="hidden dark:inline">Light</span>
      </button>
    </div>
  </div>
</aside>

<script is:inline>
  document.querySelectorAll('[id^="theme-toggle"]').forEach((btn) => {
    btn.addEventListener('click', () => {
      const isDark = document.documentElement.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
  });
</script>
