              <path d="M60 3 Q80 15, 102 18" stroke="currentColor" stroke-width="0.7" class="text-gold/25 dark:text-gold-light/25"/>
              <path d="M102 18 Q115 40, 117 60" stroke="currentColor" stroke-width="0.7" class="text-gold/25 dark:text-gold-light/25"/>
              <path d="M117 60 Q115 80, 102 102" stroke="currentColor" stroke-width="0.7" class="text-gold/25 dark:text-gold-light/25"/>
              <path d="M102 102 Q80 115, 60 117" stroke="currentColor" stroke-width="0.7" class="text-gold/25 dark:text-gold-light/25"/>
              <path d="M60 117 Q40 115, 18 102" stroke="currentColor" stroke-width="0.7" class="text-gold/25 dark:text-gold-light/25"/>
              <path d="M18 102 Q5 80, 3 60" stroke="currentColor" stroke-width="0.7" class="text-gold/25 dark:text-gold-light/25"/>
              <path d="M3 60 Q5 40, 18 18" stroke="currentColor" stroke-width="0.7" class="text-gold/25 dark:text-gold-light/25"/>
